# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Use a Python image with uv pre-installed
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS uv

# Install the project into /app
WORKDIR /app

# Enable bytecode compilation
ENV UV_COMPILE_BYTECODE=1

# Copy the lockfile for uv dependency management
COPY cognee-mcp/uv.lock /app/uv.lock
COPY cognee-mcp/pyproject.toml /app/pyproject.toml

# Install the project's dependencies using the lockfile
RUN --mount=type=cache,target=/root/.cache/uv     uv sync --dev --all-extras --reinstall

# Then, add the rest of the project source code
COPY cognee-mcp /app

# Entry point to run the MCP server
ENTRYPOINT [".venv/bin/uv", "run", "cognee"]
